<h1>new</h1>

<%=	form_for @image, :html => { :multipart => true } do |f| %>

<%# f.hidden_field :category_id %>
<%= f.select :category_id, @categories.map{|c| [c.name,c.id]}%>

<p>
<%= f.label :name %><br>
<%= f.text_field :name %>
</p>
<p>
<%= f.file_field :image %>
</p>
<p>
<%= f.label :remote_image_url, "or image URL" %><br />
<%= f.text_field :remote_image_url %>
</p>
<p><%= f.submit %></p>
<% end %>
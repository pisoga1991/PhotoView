<% provide(:title, "Image List") %>

<h1>index</h1>

<h2>List the image</h2>

<div class="image-block">
	<label id="images">
		<select id="category">
			<% @categories.each do |c| %>
			<option><%= c.name %></option>
			<% end %>
			<br>
		</select>
		<div id="image-list">
			<%= render 'list' %>
		</div>
	</label>

	<div id="image-display">
		<%= render 'display' %>
	</div>
</div>

<script type="text/javascript">
$(document).ready(function() {
	$('#category').change(function(){
		$.ajax ({
			url: "<%=update_category_path%>",
			data: {
				category : $('#category').val()
			},
			dataType: "script"
		});
	});
});

function con(id) {
	id = id.replace("thumb_","")
	console.log(id);

	$.ajax ({
		url: "<%=update_display_path%>",
		data: {
			id : id
		},
		dataType: "script"
	});
}
</script>
